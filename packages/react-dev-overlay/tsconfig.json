{
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "target": "es3",
    "lib": ["dom"],
    "downlevelIteration": true,
    "preserveWatchOutput": true,
    "outDir": "lib",
    "jsx": "react",
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "plugins": [
      {
        "name": "tsec",
        "exemptionConfig": "./exemption_list.json"
      }
    ]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
